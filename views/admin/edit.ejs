<!DOCTYPE html>
<html>
<head>
  <title>Edit-Products</title>
  <%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/admin-header') %>

  <div class="container mt-5">
    <h3>Edit Products</h3>
    
    <form action="/admin/products/update/<%= product.pid %>" 
          method="POST" 
          enctype="multipart/form-data">
      
      <!-- 分类选择 -->
      <div class="mb-3">
        <label class="form-label">分类选择</label>
        <select class="form-select" name="catid" required>
          <% categories.forEach(cat => { %>
            <option value="<%= cat.catid %>" 
              <%= product.catid === cat.catid ? 'selected' : '' %>>
              <%= cat.name %>
            </option>
          <% }) %>
        </select>
      </div>

      <!-- 产品名称 -->
      <div class="mb-3">
        <label class="form-label">产品名称</label>
        <input type="text" 
               class="form-control" 
               name="name" 
               value="<%= product.name %>" 
               required>
      </div>

      <!-- 产品价格 -->
      <div class="mb-3">
        <label class="form-label">价格</label>
        <input type="number" 
               step="0.01" 
               class="form-control" 
               name="price" 
               value="<%= product.price %>" 
               required>
      </div>

      <!-- 产品描述 -->
      <div class="mb-3">
        <label class="form-label">描述</label>
        <textarea class="form-control" 
                  name="description" 
                  rows="3"><%= product.description %></textarea>
      </div>

      <!-- 图片上传 -->
      <div class="mb-3">
        <label class="form-label">当前图片</label>
        <% if (product.image) { %>
          <div class="img-preview mb-3">
            <img src="/uploads/thumbnails/<%= product.image %>" 
                 alt="当前产品图片"
                 class="img-thumbnail"
                 style="max-width: 200px">
          </div>
        <% } %>
        <input type="file" 
               class="form-control" 
               name="image" 
               accept="image/*">
      </div>

      <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">更新产品</button>
        <a href="/admin/products" class="btn btn-secondary">取消</a>
      </div>
    </form>

    <!-- 删除表单 -->
    <form action="/admin/products/delete/<%= product.pid %>" 
          method="POST" 
          class="mt-3"
          onsubmit="return confirm('确定要删除此产品吗？')">
      <button type="submit" class="btn btn-danger">删除产品</button>
    </form>
  </div>
</body>
</html>