<div class="cart-wrapper position-relative">
  <form id="cart-form" action="/cart" method="POST" style="display: none;">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
  </form>
  <a class="nav-link px-3" href="#">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-cart3" viewBox="0 0 16 16">
      <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5M3.102 4l.84 4.479 9.144-.459L13.89 4zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4m7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4m-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2m7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2"/>
    </svg>
    <span class="badge bg-danger cart-badge">0</span>
  </a>
  
  <div class="cart-dropdown">
    <div class="cart-header border-bottom p-3">
      <h6 class="mb-0">Shopping Cart (<span class="cart-count">0</span> categories)</h6>
    </div>
    <div class="cart-items">
      <!-- 动态内容由JS填充 -->
    </div>
    <div class="cart-footer p-3">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <span>总计：</span>
        <span class="text-danger fw-bold cart-total">$0.00</span>
      </div>
      <button class="btn btn-danger w-100">去结算</button>
    </div>
  </div>
</div>